<ul class="social_icons">
  {% if settings.facebook_link != '' %}
    <li><a href="{{ settings.facebook_link }}" aria-label="{{ shop.name }} on Facebook" rel="me" target="_blank" class="icon-facebook">
      <span class="on-social-title">Follow us on facebook</span>
      </a></li>
  {% endif %}

  {% if settings.twitter_link != '' %}
    <li><a href="{{ settings.twitter_link }}" aria-label="{{ shop.name }} on Twitter" rel="me" target="_blank" class="icon-twitter">
      <span class="on-social-title">Twitter</span>
      	</a></li>
  {% endif %}

  {% if settings.google_link != '' %}
    <li><a href="{{ settings.google_link }}" aria-label="{{ shop.name }} on Google+" rel="publisher" target="_blank" class="icon-gplus"></a></li>
  {% endif %}

  {% if settings.youtube_link != '' %}
    <li><a href="{{ settings.youtube_link }}" aria-label="{{ shop.name }} on YouTube" rel="me" target="_blank" class="icon-youtube"></a></li>
  {% endif %}

  {% if settings.vimeo_link != '' %}
    <li><a href="{{ settings.vimeo_link }}" aria-label="{{ shop.name }} on Vimeo" rel="me" target="_blank" class="icon-vimeo"></a></li>
  {% endif %}

  {% if settings.pinterest_link != '' %}
    <li><a href="{{ settings.pinterest_link }}" aria-label="{{ shop.name }} on Pinterest" rel="me" target="_blank" class="icon-pinterest">
      <span class="on-social-title">Pinterest</span>
      </a></li>
  {% endif %}

  {% if settings.tumblr_link != '' %}
    <li><a href="{{ settings.tumblr_link }}" aria-label="{{ shop.name }} on Tumblr" rel="me" target="_blank" class="icon-tumblr"></a></li>
  {% endif %}

  {% if settings.instagram_link != '' %}
    <li><a href="{{ settings.instagram_link }}" aria-label="{{ shop.name }} on Instagram" rel="me" target="_blank" class="icon-instagram">
      <span class="on-social-title">Instagram</span>
      </a></li>
  {% endif %}

  {% if settings.snapchat_link != '' %}
    <li><a href="{{ settings.snapchat_link }}" aria-label="{{ shop.name }} on Snapchat" rel="me" target="_blank" class="icon-snapchat"></a></li>
  {% endif %}

  {% if settings.houzz_link != '' %}
    <li><a href="{{ settings.houzz_link }}" aria-label="{{ shop.name }} on Houzz" rel="me" target="_blank" class="icon-houzz">
      <span class="on-social-title">Houzz</span>
      </a></li>
  {% endif %}

  {% if settings.linkedin_link != '' %}
    <li><a href="{{ settings.linkedin_link }}" aria-label="{{ shop.name }} on LinkedIn" rel="me" target="_blank" class="icon-linkedin"></a></li>
  {% endif %}

  {% if settings.email_link != '' %}
    <li><a href="mailto:{{ settings.email_link }}" aria-label="Email {{ shop.name }}" target="_blank" class="icon-mail"></a></li>
  {% endif %}
</ul>